#:kivy 2.2.0

<Button>
    font_size: 15
    color: '#F5E4E4'
    background_color: '#00FFFF'


<AssistLayout>

    canvas.before:
        Color:
            rgba: (204,153,204)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        width: root.width
      
        Button:
            text: "Volver"
            size_hint: None, None
            size:(50, 50)
            pos: (10,root.height-self.height - 10)
            on_press:  app.root.current = "admin_main_view"
            #pos_hint: {'x': 1, 'y': 1}

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50

        BoxLayout:
            orientation: "horizontal"
            padding: (50,10)
            size_hint: (1,3)
            
            Label:
                text: "Hotel Trivoli"
                canvas.before:
                bold: True
        #       font_name: 'fuentes/Tangerine_Regular.ttf'
                font_size: 80
                color: '09211A'

        BoxLayout:
            orientation: "horizontal"
            padding: (50,10)
            size_hint: (1,3)

            Button:
                text: "Comenzar Lectura"
                size_hint: (.9,.2)
            Label:
                text: ""
                size_hint: (.9,.2)
            Button:
                text: "Registrar Turno"
                size_hint: (.9,.2)

        BoxLayout:
            orientation: "horizontal"
            padding: (50,10)
            size_hint: (1,3)

            BoxLayout:
                orientation: "vertical"

                Label:
                    text: "Huella Empleado"
                Label:
                    text: ""
                    font_size: 50
                    background_color: (0,1, 1, 1)
                    canvas.before:
                        Color:
                            rgba: self.background_color
                        Rectangle:
                            size: self.size
                            pos: self.pos
            Label:
                text: "Foto empleado"

