<Label>
    font_size: 20
    color: (0,255,0,0.8)

<GenReportesLayout>
    orientation: 'vertical'
    spacing: 30
    padding: 50

    canvas.before:
        Color:
            rgba: (204,153,204)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: self.minimum_size
        pos_hint: {'center_x': 0.5}

        Label:
            text: "Hotel trivoli"
            size_hint: None, None
            size: self.texture_size
            font_size: 40
            #color: '#FFFFFF'
            


    FloatLayout:
        size: root.width, root.height

        Spinner:
            text: "Tipo de reportes"
            values: ["Asistencia", "Mas Faltantes", "Mas puntuales"]
            size_hint: None, None
            size: 400, 80
            pos_hint: {'center_x': 0.25, 'center_y': 0.9}
            on_text:  root.on_change_text(self.text)
            id: report_spinner

        Button:
            text: 'Generar Reporte'
            size_hint: None, None
            size: 400, 80       
            pos_hint: {'center_x': 0.75, 'center_y': 0.9}   
            on_press: root.generateTable()
        
        Button:
            text: "Volver"
            size_hint: None, None
            size: (150, 50)
            pos: (10, root.height - self.height - 10)
            on_press: app.root.current = "principal_view"

    GridLayout:
        id: table_layout