#:kivy 2.2.0
<Button>
    font_size: 15
    color: '#F5E4E4'
    background_color: '#00FFFF'

<ConsultViewLayout>
    search_input: search_input
    canvas.before:
        Color:
            rgba: (204,153,204)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        search_input: search_input

        BoxLayout:
            size: (10, 10)

            Label:
                text: "Hotel Trivoli"
                bold: True
                font_size: 30
                color: '09211A'
       
        BoxLayout:
            size_hint_y: None
            height: '40dp'
            padding: [5, 0, 5, 0]
            spacing: 10

            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1  
                Rectangle:
                    pos: self.pos
                    size: self.size

            TextInput:
                id: search_input
                hint_text: 'Búsqueda'
                font_size: 15

            Button:
                text: 'Buscar'
                size_hint_x: None
                width: '100dp'
                on_release: root.search()

            Button:
                text: 'Volver'
                size_hint_x: None
                width: '100dp'
                on_press:  app.root.current = "principal_view"

        Label:
            size_hint_y: None
            height: '30dp'

        GridLayout:
            id: table_layout
            cols: 7
            spacing: 5
            size_hint_y: 9
            height: self.minimum_height  # Ajustar la altura automáticamente
