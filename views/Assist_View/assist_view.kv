#:kivy 2.2.0

<Button>
    font_size: 15
    color: '#F5E4E4'
    background_color: '#00FFFF'


<AssistLayout>

    canvas.before:
        Color:
            rgba: (204,153,204)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        width: root.width
      
        Button:
            text: "Volver"
            size_hint: None, None
            size:(250, 40)
            pos: (10,root.height-self.height - 10)
            on_press:  app.root.current = "admin_main_view"
            #pos_hint: {'x': 1, 'y': 1}

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50

        BoxLayout:
            orientation: "vertical"
            padding: (50,10)
            size_hint: (1,3)
            
            Label:
                text: "Hotel Trivoli"
                canvas.before:
                bold: True
        #       font_name: 'fuentes/Tangerine_Regular.ttf'
                font_size: 40
                color: '09211A'
                pos_hint: {'center_x': 0.5,'center_y': 0.2}


        BoxLayout:
            orientation: "vertical"
            padding: (50,10)
            size_hint: (1,3)

            Button:
                id: register_b
                text: "Registrar Turno"
                size_hint: (.9,.2)
                on_press: root.registerSch()

        BoxLayout:
            orientation: "horizontal"
            padding: (50,10)
            size_hint: (1,3)

            BoxLayout:
                orientation: "vertical"

                Label:
                    text: "Huella Empleado"
                
            Label:
                id: l_msg
                text: "Esperando lectura"
                font_size: 50
                size_hint: (.9,.2)
                color: '#000000'
                pos_hint: {'center_x': 0.5,'center_y': 0.7}

