<PrincipalViewLayout>:
    orientation: 'vertical'

    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        padding: 10

        Button:
            text: 'Salir'
            size_hint: None, None
            size: 300, 40
            on_press:  app.root.current = "admin_main_view"


    FloatLayout:

        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            size_hint: None, None
            size: 300, self.minimum_height
            pos_hint: {'center_x': 0.5, 'center_y': 1}

            Button:
                text: 'Registro de Empleados'
                size_hint: None, None
                size: 500, 50
                pos_hint: {'center_x': 0.5, 'center_y': 1}
                on_press:  app.root.current = "form_user"

            Button:
                text: 'Registro de Horarios'
                size_hint: None, None
                size: 500, 50
                pos_hint: {'center_x': 0.5, 'center_y': 1}
                on_press:  app.root.current = "register_sch"
            
            Button:
                text: 'Asignacion de Horarios'
                size_hint: None, None
                size: 500, 50
                pos_hint: {'center_x': 0.5, 'center_y': 1}
                on_press:  app.root.current = "assign_sch"

            Button:
                text: 'Consultar Empleados'
                size_hint: None, None
                size: 500, 50
                pos_hint: {'center_x': 0.5, 'center_y': 1}
                on_press:  app.root.current = "consultEmp_view"
            
            Button:
                text: 'Consultar Horarios'
                size_hint: None, None
                size: 500, 50
                pos_hint: {'center_x': 0.5, 'center_y': 1}
                on_press:  app.root.current = "consultSch_view"
            
            Button:
                text: 'Generar Reporte'
                size_hint: None, None
                size: 500, 50
                pos_hint: {'center_x': 0.5, 'center_y': 1}
                on_press:  app.root.current = "report_view"
