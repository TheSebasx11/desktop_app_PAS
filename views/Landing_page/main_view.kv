#:kivy 2.2.0

<Button>
    font_size: 15
    color: '#F5E4E4'
    background_color: '#00FFFF'

<MainViewLayout>
    
    canvas.before:
        Color:
            rgba: (204,153,204)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50

        BoxLayout:
            #size_hint: (1,3)
            size: (10, 10)

            Label:
                text: "Hotel Trivoli"
                canvas.before:
                bold: True
        #       font_name: 'fuentes/Tangerine_Regular.ttf'
                font_size: 30
                color: '09211A'
       
        BoxLayout:
            orientation: "horizontal"
            padding: (50,10)
            height: self.minimum_height


            Button:
                text: "Administrador"
                size_hint: (.9,.2)

            Button:
                text: "Asignaci√≥n de huellas"
                size_hint: (.9,.2)

            Button:
                text: "Registrar Turno"
                size_hint: (.9,.2)
                on_press: app.root.current = "assist_view"
        
        Label:
            text: "Listado de Usuarios"
        
        GridLayout:
            id: table_layout
            cols: 4
            spacing: 5
            size_hint_y: 8
            height: "100dp"

        